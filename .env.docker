# Docker Environment Configuration
# Copy this file to .env for Docker deployment

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database
DATABASE_URL=file:./data/prod.db

# Redis Configuration
USE_REDIS=true
REDIS_URL=redis://redis:6379
REDIS_KEY_PREFIX=identity-api:

# Cache Configuration
CACHE_DEFAULT_TTL=300000
CACHE_MAX_SIZE=1000

# Security
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Optional: Redis Authentication (uncomment if needed)
# REDIS_PASSWORD=your_redis_password

# Optional: Custom Redis Database (default: 0)
# REDIS_DB=0